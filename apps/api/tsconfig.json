{
  "extends": "@repo/typescript-config/base.json",

  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "target": "ES2022",
    "lib": ["ES2022"],

    "types": ["node"],
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "moduleDetection": "auto",

    "allowImportingTsExtensions": true,
    "noEmit": true
  },

  "include": ["src"]
}
